<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="tools.sctrade.companion" level="INFO">
	</logger>

	<logger name="tools.sctrade.companion.utils.ProcessRunner" level="DEBUG">
	</logger>

	<logger name="tools.sctrade.companion.domain.commodity.CommoditySubmissionFactoryITest" level="INFO">
	</logger>

	<!-- DO NOT log keyboard interupts -->
	<logger name="org.jnativehook" level="off">
	</logger>
</configuration>
